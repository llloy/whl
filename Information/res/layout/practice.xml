<?xml version="1.0" encoding="utf-8"?>

    
   
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical" 
        android:orientation="horizontal" 

        android:background="@drawable/foot_bg" 
        android:paddingTop="@dimen/dimen_2_dip" 
        android:paddingBottom="@dimen/dimen_2_dip" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        >
        
        <Button 
            android:textSize="@dimen/dimen_14_dip" 
            android:textColor="@color/btn_text_color" 
            android:id="@id/btn_previous" 
            android:background="#00000000" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:text="上一题" 
            android:drawableTop="@drawable/icon_pre" 
            android:layout_weight="1.0" />
        <Button 
            android:textSize="@dimen/dimen_14_dip" 
            android:textColor="@color/btn_text_color" 
            android:id="@id/btn_mode" 
            android:background="#00000000" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="检查问卷" 
            android:drawableTop="@drawable/icon_mode_answer" 
            android:layout_weight="1.0" />
       <TextView 
            android:textSize="@dimen/dimen_18_dip" 
            android:textColor="#ffffff00" android:gravity="center" 
            android:layout_gravity="center_vertical" 
            android:id="@id/txt_label" 
            android:layout_width="wrap_content" 
            android:layout_height="@dimen/dimen_40_dip" 
            android:text="100/100" 
            android:layout_weight="1.0" 
            />
        <Button
            android:textSize="@dimen/dimen_14_dip" 
            android:textColor="@color/btn_text_color" 
            android:id="@id/btn_upload" 
            android:background="#00000000" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="提交问卷" 
            android:drawableTop="@drawable/icon_finish" 
            android:layout_weight="1.0" />
        <Button 
            android:textSize="@dimen/dimen_14_dip" 
            android:textColor="@color/btn_text_color" 
            android:id="@id/btn_next" 
            android:background="#00000000" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text="下一题" 
            android:drawableTop="@drawable/icon_next" 
            android:layout_weight="1.0" />
    </LinearLayout>


