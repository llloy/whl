<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:padding="10dip"
    android:scrollbars="none"

    >


   
   <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:focusable="true"  
       android:focusableInTouchMode="true"
       
       >
       <View 
     android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
 
   <!-- 题目标题内容  -->
   <TextView 
  	    android:id="@+id/tev_title"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="5dip"
  	    android:padding="5dip"
  	    android:textSize="15dp"
        android:textColor="#ff4e4e4e"

  />
    <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
   <!-- 题目类型 -->
   <TextView 
  	    android:id="@+id/tev_titletype"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="5dip"
  	    android:padding="5dip"
  	    android:textSize="15dp"
        android:textColor="#ff4e4e4e"

  />
    <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
   <!-- 题目要求 -->
   <TextView 
  	    android:id="@+id/tev_request"
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_marginTop="5dip"
  	    android:padding="5dip"

  	    android:textColor="#ff4e4e4e"
      	android:textSize="15dp"


  />
    <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
   <!-- 执行标准 -->

     <TextView
  	     android:id="@+id/tev_zxbz"
         android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"
      />

      <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
    <!-- 题目分值 -->
    <TextView
  	     android:id="@+id/tev_tm_value"
         android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"

  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"
    />
    
    <View 
     android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
      <!-- 评分规则 -->

     <TextView
  	     android:id="@+id/tev_pfgz"
         android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"


      />

      <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />

    <!-- 答案类型 -->
    <TextView
  	     android:id="@+id/tev_select_type"
         android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"

  />
     <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
    
      <LinearLayout 
  	     android:id="@+id/layout_answeritem" 
  	     android:layout_width="fill_parent" 
  	     android:layout_height="wrap_content"
  	     android:padding="10dip"
  	     android:focusable="true"  
         android:focusableInTouchMode="true"
  	  />
    
    <!-- 得分 -->
    <LinearLayout 
         android:id="@+id/linearout_needgone"
  	     android:layout_width="fill_parent" 
  	     android:layout_height="wrap_content"
  	     android:padding="10dip"
  	     android:focusable="true"  
         android:focusableInTouchMode="true"
         android:orientation="horizontal"
         android:visibility="gone"
         
  	  >
  	     <TextView
         android:layout_width="wrap_content"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"
  	     android:text="得分："
  	     />
         <EditText 
             android:id="@+id/getscoreedit"
             android:layout_width="fill_parent"
  	         android:layout_height="wrap_content"
  	         android:layout_marginTop="5dip"
  	         android:padding="5dp"
  	         android:textSize="15dp"
  	         android:inputType="numberDecimal"
  	         android:maxLength="4"
             />
     </LinearLayout>
     
    
      <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
   
      <!-- 扣分原因 -->
     <LinearLayout 
  	     android:layout_width="fill_parent" 
  	     android:layout_height="wrap_content"
  	     android:padding="10dip"
  	     android:focusable="true"  
         android:focusableInTouchMode="true"
         android:orientation="horizontal"
  	  >
         <TextView
         android:layout_width="wrap_content"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"
  	     android:text="原因："
  	     />
 
         <EditText 
             android:id="@+id/losescoreedit"
             android:layout_width="fill_parent"
  	         android:layout_height="wrap_content"
  	         android:layout_marginTop="5dip"
  	         android:padding="5dp"
  	         android:textSize="15dp"   
             />
      
      
     </LinearLayout>
      <View 
     android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />

   <!--截图说明-->
   <LinearLayout 
  	     android:layout_width="fill_parent" 
  	     android:layout_height="wrap_content"
  	     android:padding="10dip"
  	     android:focusable="true"  
         android:focusableInTouchMode="true"
         android:orientation="vertical"
  	  >
        <TextView
  	         android:id="@+id/tev_jtsm"
             android:layout_width="fill_parent"
  	         android:layout_height="wrap_content"
  	         android:layout_marginTop="5dip"
  	         android:padding="5dip"
  	         android:textColor="#ff4e4e4e"
  	         android:textSize="15dp"
             />
        <Button 
             android:id="@+id/but_cancelimg"
             android:layout_width="fill_parent"
  	         android:layout_height="wrap_content"
  	         android:padding="5dip"
  	         android:textColor="#ff4e4e4e"
  	         android:textSize="15dp"
  	         android:text="取消截图上传"
            />

      </LinearLayout>
      <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
      
  	<!--备注-->

     <TextView
  	     android:id="@+id/tev_bz"
         android:layout_width="fill_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_marginTop="5dip"
  	     android:padding="5dip"
  	     android:textColor="#ff4e4e4e"
  	     android:textSize="15dp"
      />

      <View 
        android:background="@drawable/pdialog_img_divider" android:layout_width="fill_parent" android:layout_height="2.0dip" android:layout_marginTop="15.0dip" android:layout_marginBottom="5.0dip" 
        />
</LinearLayout>
     
</ScrollView>
